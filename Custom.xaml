        <StackPanel Margin="20,30,20,20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <local:MyImage Height="80" Width="80" Margin="0,0,15,0"
                            Source="pack://application:,,,/images/Blocks/NetherStar.png" />
                <StackPanel>
                    <TextBlock Text="ShaDiaoClient 启动器" FontSize="22" FontWeight="Bold"
                            Foreground="{DynamicResource ColorBrush2}" />
                    <TextBlock Text="版本 3.0.1 | 2025年度版 | 为Hypixel优化" FontSize="12"
                            Foreground="{DynamicResource ColorBrush7}" />
                </StackPanel>
            </StackPanel>

            <local:MyHint Margin="0,15,0,0" Theme="Blue"
                        Text="欢迎回来！今日推荐：{hint} | 记得领取每日奖励~" />
        </StackPanel>
    </local:MyCard>

    <!-- 核心功能卡片 - 突出显示Hypixel启动功能 -->
    <local:MyCard Title="快速启动" Margin="0,0,0,15" CanSwap="False">
        <StackPanel Margin="20,30,20,20">
            <TextBlock Text="一键启动您的游戏体验" Margin="0,0,0,15" FontSize="14" />

            <!-- 核心按钮：启动游戏并进入Hypixel -->
            <local:MyButton Width="320" Height="50" Margin="0,0,0,15" HorizontalAlignment="Center"
                        ColorType="Highlight"
                        Text="🚀 启动游戏并进入Hypixel"
                        EventType="启动游戏"
                        EventData="\current|mc.hypixel.net"
                        ToolTip="自动启动当前选中版本并连接至Hypixel服务器">
            </local:MyButton>

            <!-- 其他快速启动选项 -->
            <Grid Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <local:MyButton Grid.Column="0" Margin="0,0,5,0" Height="35"
                            Text="单机模式" EventType="启动游戏" EventData="\current"
                            ToolTip="启动当前版本的单机模式">
                </local:MyButton>

                <local:MyButton Grid.Column="1" Margin="5,0,5,0" Height="35"
                            Text="正版模式" EventType="启动游戏" EventData="\current|offline"
                            ToolTip="以普通模式启动游戏">
                </local:MyButton>
            </Grid>
